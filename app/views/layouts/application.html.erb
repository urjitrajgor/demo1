
<!DOCTYPE html>
<html>
  <head>
    <title>Digg</title>
    <%= stylesheet_link_tag 'jquery-ui-1.7.2.custom', 'jquery-ui-timepicker-addon','style-2.css' %>
<%#= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= javascript_include_tag  "jquery.min" %>
    <%#= javascript_include_tag  "jquery-ui.min" %>
    <%= javascript_include_tag  "jquery-ui-1.7.2.custom.min", 'jquery-ui-timepicker-addon'%>

  </head>

  <body>  
    <table border="0" width="100%">
      <tr>
        <td>
          <img src="/images/logo.jpg" alt="" />
        </td>
        <td class ="account">
          <% if $current_user == nil %>
            <%= link_to 'Signin', login_path %>&nbsp;|&nbsp;
            <%= link_to 'Signup', new_user_path %>
          <% else %>
            <%= link_to 'logout',logout_path %>

          <% end%>
          <% if not request.env['PATH_INFO'] == "/" %>
            |&nbsp;<%= link_to 'Home', "/" %>
          <% end %>
        </td>
      </tr>
    </table>


    <table width="100%">
      <tr class="body1" >
        <td colspan="2">
          <%= yield %>
        </td>
      </tr>
    </table>

    <table width="100%">
      <tr>
        <td class="footer">
          Footer
        </td>
      </tr> 
    </table>

  </body>

</html>
